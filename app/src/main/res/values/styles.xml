<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

        <style name="editCurrencyStyle">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/input_currency</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:inputType">number</item>
        <item name="android:ems">10</item>

    </style>

    <style name="buttonCurrencyStyle">
        <item name="android:background">@drawable/input_convert</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#FDFDFE</item>
        <item name="android:textSize">18sp</item>
    </style>


</resources>
